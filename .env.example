# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# cspell:ignore HSTS

# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.1.5

# Database Configuration for PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/voting_system_db

# Production Settings
DJANGO_SETTINGS_MODULE=voting_system.settings_postgresql

# Optional: Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Optional: Static/Media Files (for production)
STATIC_ROOT=/var/www/voting_system/static/
MEDIA_ROOT=/var/www/voting_system/media/

# Security Settings (for production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
